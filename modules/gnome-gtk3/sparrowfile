my $user = config()<user>;

my $directory = "/data/test/{$user}";

my $scm = config()<scm>;

user $user;

directory $directory, %( 
  owner => $user,
  group => $user

);

git-scm $scm, %( 
  to => $directory, 
  user => $user,
);

bash "cd {$directory} && git log --name-status HEAD^..HEAD", %(
  description => "last commit"
);

bash "cd {$directory} && ls -l";

if os() eq 'alpine' {

  # this is needed for alpine rakudo installation
  unless "/bin/zef".IO ~~ :e {
    copy "/opt/rakudo-pkg/share/perl6/core/bin/zef", "/bin/zef"
  }

  # this is needed for alpine rakudo installation
  unless "/bin/perl6".IO ~~ :e {
    copy "/opt/rakudo-pkg/bin/perl6", "/bin/perl6"
  }


}

package-install "libgtk-3-dev"; # probably will only works for debian so far

zef $directory, %( 
  force => False,
  depsonly => True, 
  notest => True,
  user => $user,
  description => "Install module dependencies"
);

zef $directory, %( 
  force => False,
  depsonly => True, 
  user => $user,
  description => "Install test-depends dependencies"
);

bash "cd {$directory} && zef test .", %(
  description => "zef test",
  user => $user
);

